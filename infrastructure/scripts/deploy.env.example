# Copy this file to infrastructure/scripts/deploy.env and fill in your values

# ----- Backend (FastAPI) -----
BACKEND_ECR_REPO=296062592436.dkr.ecr.us-west-1.amazonaws.com/oncolife-patient-api
BACKEND_ECR_REGION=us-west-1
BACKEND_APP_RUNNER_SERVICE_NAME=oncolife-patient-api
# Alternatively set the ARN directly (takes precedence if set)
# BACKEND_APP_RUNNER_SERVICE_ARN=arn:aws:apprunner:us-west-2:ACCOUNT_ID:service/oncolife-patient-api/XXXXXXXXXXXX
BACKEND_APP_RUNNER_REGION=us-west-2

# ----- Frontend/Gateway (Express + Vite build) -----
FRONTEND_ECR_REPO=296062592436.dkr.ecr.us-west-1.amazonaws.com/oncolife-patient-gateway
FRONTEND_ECR_REGION=us-west-1
FRONTEND_APP_RUNNER_SERVICE_NAME=oncolife-patient-gateway
# Alternatively set the ARN directly (takes precedence if set)
# FRONTEND_APP_RUNNER_SERVICE_ARN=arn:aws:apprunner:us-west-2:ACCOUNT_ID:service/oncolife-patient-gateway/XXXXXXXXXXXX
FRONTEND_APP_RUNNER_REGION=us-west-2

# Optional: override build platform
BUILD_PLATFORM=linux/amd64

# Optional: explicit ECR registry host for docker login (will be derived from *ECR_REPO if unset)
# ECR_REGISTRY_HOST=296062592436.dkr.ecr.us-west-1.amazonaws.com